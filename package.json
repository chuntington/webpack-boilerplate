{
	"name": "webpack-boilerplate",
	"version": "0.13.0",
	"author": "Cameron Huntington",
	"description": "Starter Webpack (5) boilerplate for generating single page applications.",
	"keywords": [
		"webpack",
		"boilerplate",
		"starter",
		"tailwindcss",
		"swc",
		"postcss",
		"eslint",
		"stylelint",
		"nodejs",
		"javascript",
		"lightningcss",
		"purgecss",
		"spa"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/chuntington/webpack-boilerplate.git"
	},
	"scripts": {
		"build": "cross-env webpack --progress",
		"watch": "cross-env webpack --watch --progress",
		"serve": "cross-env webpack serve",
		"google-fonts": "npm run google-fonts-list --apikey=$npm_config_apikey && npm run google-fonts-fetch",
		"google-fonts-list": "npm run generateList $npm_config_apikey --prefix node_modules/google-fonts-complete",
		"google-fonts-fetch": "npm run generateFonts --prefix node_modules/google-fonts-complete"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^5.0.0",
		"@swc/core": "^1.3.102",
		"browserslist": "^4.22.2",
		"compression-webpack-plugin": "^10.0.0",
		"cross-env": "^7.0.3",
		"css-loader": "^6.8.1",
		"css-minimizer-webpack-plugin": "^5.0.1",
		"dotenv": "^16.3.1",
		"eslint": "^8.56.0",
		"eslint-webpack-plugin": "^4.0.1",
		"html-webpack-plugin": "^5.6.0",
		"lightningcss": "^1.22.1",
		"mini-css-extract-plugin": "^2.7.6",
		"postcss": "^8.4.32",
		"postcss-advanced-variables": "^3.0.1",
		"postcss-easing-gradients": "^3.0.1",
		"postcss-font-magician": "^3.0.0",
		"postcss-import": "^16.0.0",
		"postcss-loader": "^7.3.4",
		"style-loader": "^3.3.3",
		"stylelint": "^16.1.0",
		"swc-loader": "^0.2.3",
		"tailwindcss": "^3.4.0",
		"terser-webpack-plugin": "^5.3.10",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1"
	},
	"browserslist": "> 1%, last 2 versions"
}
