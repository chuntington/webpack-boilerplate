{
	"name": "webpack-boilerplate",
	"version": "0.14.7",
	"author": "Cameron Huntington",
	"description": "Starter Webpack (5) boilerplate for generating single page applications.",
	"keywords": [
		"webpack",
		"boilerplate",
		"starter",
		"tailwindcss",
		"swc",
		"postcss",
		"eslint",
		"stylelint",
		"nodejs",
		"javascript",
		"lightningcss",
		"purgecss",
		"spa"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/chuntington/webpack-boilerplate.git"
	},
	"scripts": {
		"build": "cross-env webpack --progress",
		"watch": "cross-env webpack --watch --progress",
		"serve": "cross-env webpack serve",
		"google-fonts": "npm run google-fonts-list --apikey=$npm_config_apikey && npm run google-fonts-fetch",
		"google-fonts-list": "npm run generateList $npm_config_apikey --prefix node_modules/google-fonts-complete",
		"google-fonts-fetch": "npm run generateFonts --prefix node_modules/google-fonts-complete"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^6.0.0",
		"@swc/core": "^1.10.0",
		"browserslist": "^4.24.2",
		"compression-webpack-plugin": "^11.1.0",
		"cross-env": "^7.0.3",
		"css-loader": "^7.1.2",
		"css-minimizer-webpack-plugin": "^7.0.0",
		"dotenv": "^16.4.7",
		"eslint": "^8.57.0",
		"eslint-webpack-plugin": "^4.2.0",
		"html-webpack-plugin": "^5.6.3",
		"lightningcss": "^1.28.2",
		"mini-css-extract-plugin": "^2.9.2",
		"postcss": "^8.4.49",
		"postcss-advanced-variables": "^3.0.1",
		"postcss-easing-gradients": "^3.0.1",
		"postcss-font-magician": "^4.0.0",
		"postcss-import": "^16.1.0",
		"postcss-loader": "^8.1.1",
		"style-loader": "^4.0.0",
		"stylelint": "^16.11.0",
		"swc-loader": "^0.2.6",
		"tailwindcss": "^3.4.16",
		"terser-webpack-plugin": "^5.3.10",
		"webpack": "^5.97.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.1.0"
	},
	"browserslist": "> 1%, last 2 versions"
}
